<div class="row">
  <div class="col-lg-offset-3 col-lg-6">
    <div class="panel panel-primary">
      <div class="panel-heading">
        <h2 class="panel-title">プロフィール変更</h2>
      </div>
      <div class="panel-body">
        <div class="form-horizontal" role="form">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
          <%= devise_error_messages! %>

          <div class="field form-group">
            <%= f.label :username, class: "col-sm-4 control-label" %>
            <div class="col-sm-8">
              <%#= f.text_field :username, class: 'form-control', autofocus: true %>
              <%= f.text_field :username, autofocus: true, placeholder: current_user.username, class: "form-control" %>
            </div>
          </div>

          <div class="field form-group">
            <%= f.label :email, class: "col-sm-4 control-label" %>
            <div class="col-sm-8">
              <%= f.email_field :email, autofocus: true, placeholder: current_user.email, class: "form-control" %>
            </div>
          </div>

          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
          <% end %>

          <div class="field form-group">
            <%= f.label :password, class: "col-sm-4 control-label" %>
            <div class="col-sm-8">
              <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
              <span class="help-block">
                変更したくない場合は空欄のままにしてください
              </span>
            </div>
          </div>

          <div class="field form-group" >
            <%= f.label :password_confirmation, class: "col-sm-4 control-label" %>
            <div class="col-sm-8">
              <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
            </div>
          </div>

          <div class="field form-group" >
            <%= f.label :current_password, class: "col-sm-4 control-label" %>
            <div class="col-sm-8">
              <%= f.password_field :current_password, autocomplete: "off", class: "form-control" %>
            </div>
          </div>

          <div class="actions form-group">
            <div class="col-sm-offset-4 col-sm-8">
              <%= f.submit "変更を保存", class: "btn btn-default" %>
            </div>
          </div>
          <% end %>

        <h3 class="page-header">アカウントの削除</h3>

        <div class="text-center">
          <%= button_to "アカウントを削除する", registration_path(resource_name), data: { confirm: "本当に削除しても良いですか?" }, method: :delete, class: "btn btn-primary" %>
        </div>
      </div>
    </div>
  </div>
</div>
