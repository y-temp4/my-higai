<%= form_for :post, url: posts_path do |f| %>

    <div class="field">
      <%#= f.label :category_id, "カテゴリー" %>
      <%#= f.radio_button :category_id %>
    </div>

    <div class="field">
      <%= f.label :name, "タイトル" %>
      <%= f.text_field :title %>
    </div>

    <div class="field">
      <%= f.label :body, "内容" %>
      <%= f.text_field :body %>
    </div>

    <div class="actions">
      <%= f.submit "登録する" %>
    </div>
<% end %>
